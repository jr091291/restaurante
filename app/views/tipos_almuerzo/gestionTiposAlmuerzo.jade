extends ../template
block content
    #windowUsuarios.center.color-back(ng-controller='',layout-padding, layout="column", layout-align="center center", ng-cloak)
        md-toolbar.md-tall.color-back-second.width-70
            h1.md-toolbar-tools.color-back Tipos de Almuerzos
        // panel de filtrado
        md-toolbar.color-back-second.md-scroll-shrink.width-70(layout="row",layout-pading, layout-sm="colunm")
            div.width-70
                md-input-container.md-block
                    label Filtrar
                    input(type='text', autofocus, ng-model='searchText')
                    md-icon.md-primary search
            div
                section(layout='row', layout-sm='column', layout-align='center center', layout-wrap)
                    md-button.md-fab.color-back(layout-align='center center', ng-click='showCrear($event)')
                        md-tooltip(md-direction='right') Nuevo Usuario
                        md-icon.md-light.md-48 add
        md-content.width-70.height-70(ng-controller='DialogFormUserController', layout-pading)
            md-list(ng-repeat='itemusuario in usuarios | filter:searchText')
                md-list-item.md-3-line.md-list.md-list-user
                    .md-list-item-text
                        h3 C.C. {{itemusuario.identificacion}}
                        h4 {{itemusuario.nombres}} {{itemusuario.apellidos}} ({{itemusuario.nombreRol}})
                        p {{itemusuario.email}}
                    section(layout='row', layout-sm='column', layout-align='center center', layout-wrap)
                        md-button.md-fab.BtnNormal(layout-align='center center',ng-click='showEditar($event,itemusuario)')
                            md-tooltip(md-direction='left') Editar Usuario
                            md-icon.md-light.md-48 create
                    section(layout='row', layout-sm='column', layout-align='center center', layout-wrap)
                        md-button.md-fab.BtnWrang(layout-align='center center',ng-click='showConfirm($event)')
                            md-tooltip(md-direction='right') Eliminar Usuario
                            md-icon.md-light.md-48 delete sweep
