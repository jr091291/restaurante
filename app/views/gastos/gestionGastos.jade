extends ../template
block content
    #windowGastos.center.color-back(ng-controller='GastosController',layout-padding, layout="column", layout-align="center center", ng-cloak)
        md-toolbar.color-back-second.width-70.height-10
            h1.md-toolbar-tools.color-back Gastos
        // panel de filtrado
        md-toolbar.color-back-second.md-scroll-shrink.width-70(layout="row",layout-pading, layout-sm="colunm")
            div.width-70
                md-input-container.md-block
                    label Filtrar
                    input(type='text', autofocus, ng-model='searchText')
                    md-icon.md-primary search
            div
                section(layout='row', layout-sm='column', layout-align='center center', layout-wrap)
                    md-button.md-fab.color-back(layout-align='center center', ng-click='showCrear($event)')
                        md-tooltip(md-direction='right') Nuevo Gasto
                        md-icon.md-light.md-48 add
        md-content.width-70.height-70(layout-pading)
            md-list(ng-repeat='itemGasto in gastos.lista | filter:searchText')
                md-list-item.md-3-line.md-list.md-list-user
                    .md-list-item-text
                        h3 Hora: {{itemGasto.hora}}
                        p {{itemGasto.descripcionGasto}}
                        label Descripci√≥n
                        h2 Valor: {{itemGasto.costo}}
                    section(layout='row', layout-sm='column', layout-align='center center', layout-wrap)
                        md-button.md-fab.BtnWrang(layout-align='center center',ng-click='showEdit($event,itemGasto)')
                            md-tooltip(md-direction='right') Editar Gasto
                            md-icon.md-light.md-48 mode_edit